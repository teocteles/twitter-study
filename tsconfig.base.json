{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "sourceMap": true,
    "newLine": "LF",
    "declaration": false,
    "module": "esnext",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "esnext",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "typeRoots": [
      "@types",
      "@types/node",
      "@types/jasmine"
    ],
    "lib": [
      "es2018",
      "dom"
    ],
    "types": [
      "node", 
      "jasmine"
    ]
  }
}
